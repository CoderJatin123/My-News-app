<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.News.NewsDetailActivity">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="210dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp" app:cardCornerRadius="16dp" android:id="@+id/cardView2">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/img" android:scaleType="centerCrop"
        />
    </androidx.cardview.widget.CardView>
    <TextView
            android:text="Asume this is best Title."
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/d_title"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            android:fontFamily="@font/inter_medium" android:textSize="23sp"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:layout_marginTop="28dp"
            android:gravity="left"
            android:textColor="@color/Title"
            app:layout_constraintEnd_toEndOf="@+id/cardView2" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" app:lineHeight="25dp"/>
    <TextView
            android:text="This is Descripition."
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/d_desc"
            android:fontFamily="@font/inter" android:textSize="20sp"
            android:gravity="left"
            android:textColor="@color/Desc"
            app:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="@+id/d_title"
            app:layout_constraintEnd_toEndOf="@+id/d_title"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/d_time"
            android:layout_marginTop="22dp"/>
    <TextView
            android:text="Mon 12 Jan 2022"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/d_time"
            android:fontFamily="@font/inter_medium" android:textSize="20sp"
            android:gravity="left"
            android:textColor="@color/Title"
            app:lineHeight="24dp"
            app:layout_constraintStart_toStartOf="@+id/d_title"
            app:layout_constraintEnd_toEndOf="@+id/d_title" app:layout_constraintTop_toBottomOf="@+id/d_title"
            android:layout_marginTop="22dp"/>
    <TextView
            android:text="Author :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/d_auth"
            android:fontFamily="@font/inter_medium" android:textSize="20sp"
            android:textColor="@color/Title" app:layout_constraintStart_toStartOf="@+id/d_desc"
            app:layout_constraintTop_toBottomOf="@+id/d_desc" android:layout_marginTop="22dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>